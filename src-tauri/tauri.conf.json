{
  "productName": "Retrobowl",
  "version": "0.1.0",
  "identifier": "com.retroowl.app",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "windows": [
      {
        "title": "Retrobowl",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logo.ico",
      "icons/icon.ico",
      "icons/logo.png",
      "icons/icon.png"
    ]
  }
}
